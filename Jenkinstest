pipeline {
    agent any
stages {
        stage('Stage 1') {
            steps {
                sh "${WORKSPACE}/hostname_host.sh"
                sh 'echo "will this fail"'
                   }
                 catch(error) {
                 throw error
                              }
              
        }
      stage('Stage 2') {
            steps {
                sh "${WORKSPACE}/ip_host.sh"
                sh 'echo "will this fail"'
             
            }
      }
    }

}
